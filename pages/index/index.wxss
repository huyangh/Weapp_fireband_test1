/**index.wxss**/
page{
  background: #F6F6F6;
}

.container{
  display: flex;
  flex-direction: column;
}

.input{
  display: flex;
  flex-direction: row;
  border: 1px solid #666;
  border-radius: 5px;
  
  width: 600rpx;
  height: 40px;
  vertical-align: middle;
}

.inputbox{
  width: 480rpx;
  display: flex;
  height: 40px;
}

.place-holder{
  
  display: flex;
  align-items: center;
  font-size: 20px;
  color: #999;
}

.button{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 125rpx;
  height: 41px;
  background-color: #888;
  border-radius: 5px;
  justify-content: center;
  vertical-align: middle;
}

.icon1{
  height: 32px;
  width: 32px;
}

.userdata{
  display: flex;
  flex-direction: column;
  border: 1px solid #999;
  border-radius: 5px;
  width: 600rpx;
  height: 200px;
  margin-top: 30px;
  text-align: center;
}

.data1{
  line-height: 40px;
}

.data2{
  line-height: 40px;
  border-top: 1px solid #999;
  
}

.mapdes{
  line-height: 40px;
  font-weight: bold;
}

.viewmap{
  margin-top: 30px;
  border: 1px solid #999;
  border-radius: 5px;
  width: 600rpx;
  text-align: center;
}

.status{
  margin-top: 30px;
  width: 600rpx;
  text-align: center;
}

.sta{
  font-size: 20px;
  color: #666;
}
