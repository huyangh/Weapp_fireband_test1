<!--index.wxml-->
<view class="container">
  <view class='input'>
    <input placeholder-class='place-holder' class='inputbox' type='text' placeholder='请输入设备编号(1-100)' auto-focus='true' confirm-type='search' adjust-position='true' bindinput='sninput'>
    </input>
    <view class='button' bindtap='searchSN'>
      <image class='icon1' src='/images/icon12.png'></image>
    </view>
  </view>

  <view class='status'>   
    <text class= 'sta'>设备当前状态：\n{{status}}\n</text>
    <text class= 'sta'>最后采集位置信息时间：\n{{collectTime1}} {{collectTime2}}</text>
  </view>

  <view class="userdata">
    <text id='hr' class="data1">心率： {{heartrate}}</text>
    <text id='spo2' class="data2">血氧：{{spo2}}%</text>
    <text id='lo' class="data2">经度：{{lo_gps==0? lo_lbs: lo_gps}}</text>
    <text id='la' class="data2">纬度：{{la_gps==0? la_lbs: la_gps}}</text>
    <text id='batt' class="data2">电量百分比：{{batlvl}}%</text>
    
  </view>

  <view class='viewmap' bindtap='bindViewTap'>
    <text class='mapdes'>点击查看设备位置</text> 
  </view>

</view>

